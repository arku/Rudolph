<!doctype html>
%html
  %head
    %title Rudolph

    %meta{charset: 'utf-8'}
    %meta{name:"viewport", content:"width=device-width, initial-scale=1.0"}
    %meta{property: "og:type", content: "website"}
    %meta{property: "og:title", content: "Rudolph"}
    %meta{property: "og:description", content: "The best Secret Santa app ever."}
    %meta{property: "og:url", content: "http://itsrudolph.com"}
    %meta{property: "og:image", content:"http://itsrudolph.com/rudolph_thumb.png"}
    %meta{property: "og:image:type", content:"image/png"}
    %meta{property: "og:image:width", content:"700"}
    %meta{property: "og:image:height", content:"388"}
    %meta{name: "description", content: "The best Secret Santa app ever."}
    %meta{name: "keywords", content:"rudolph, secret santa, amigo oculto, secret, santa, gift, gifts, exchange, christmas, natal, easter, pÃ¡scoa, holidays, flora saramago"}
    %meta{name:"robots", content:"index"}

    %link{rel:"image_src", href:"http://itsrudolph.com/rudolph_thumb.png"}

    = stylesheet_link_tag    "application", media: "all"
    = favicon_link_tag       'favicon.png'
    = csrf_meta_tags

  %body
    :javascript
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '350117775183108',
          xfbml      : true,
          version    : 'v2.4'
        });
      };

      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    #wrapper
      = render 'shared/header'
      = render 'layouts/messages'

      - unless hide_breadcrumbs?
        .row.bread= render_breadcrumbs :tag => :li, :separator => ">&nbsp&nbsp"

      #contents
        = yield
      - unless hide_footer?
        = render 'shared/footer'

    = javascript_include_tag "https://maps.googleapis.com/maps/api/js"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-56119761615d1010", "async" => "async"
    = javascript_include_tag "vendor/modernizr"

    - if action_name == 'message_board'
      = subscribe_to "/messages/new"
