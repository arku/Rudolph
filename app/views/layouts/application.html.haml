<!doctype html>
%html
  %head
    %title Rudolph

    %meta{charset: 'utf-8'}
    %meta{name:"viewport", content:"width=device-width, initial-scale=1.0"}
    %meta{property: "og:type", content: "website"}
    %meta{property: "og:title", content: "Rudolph"}
    %meta{property: "og:description", content: ""}
    %meta{property: "og:url", content: "http://www"}
    %meta{property: "og:image", content:""}
    %meta{property: "og:image:type", content:"image/png"}
    %meta{property: "og:image:width", content:""}
    %meta{property: "og:image:height", content:""}
    %meta{name: "description", content: ""}
    %meta{name: "keywords", content:""}
    %meta{name:"robots", content:"index"}

    %link{rel:"image_src", href:"assets/packpal_thumb.png"}

    = javascript_include_tag "https://maps.googleapis.com/maps/api/js"

    = stylesheet_link_tag    "application", media: "all"
    = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Coustard"
    = stylesheet_link_tag    "http://netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css"
    = csrf_meta_tags

  %body
    = render 'shared/header'
    = render 'layouts/messages'

    - unless hide_breadcrumbs?
      .row.bread= render_breadcrumbs :tag => :li, :separator => ">&nbsp&nbsp"

    #contents
      = yield

    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "vendor/modernizr"