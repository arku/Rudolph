%table{style: 'background-color: #F1EDE0; border-collapse: collapse; font-family: Helvetica; margin: auto; width: auto; min-width: 40%;'}
  %tr{style: 'background-color: #0F7D75; text-align: center; height: 60px;'}
    %td{style: 'padding-top: 8px;'}
      = link_to root_path do
        = image_tag 'http://itsrudolph.com/logo.png'
  %tr
    %td{style: 'text-align: center; color: #8D8D8D;'}
      %div{style: 'background-color: white; border: 1px solid #DEDEDE; margin: 20px; padding: 20px;'}
        %p= t("devise.mailer.invitation_instructions.hello", email: @resource.email.split('@').first)

        - if @resource.invited_by
          %p= t("devise.mailer.invitation_instructions.person_invited_you", person: @resource.invited_by.name)
        - else
          %p= t("devise.mailer.invitation_instructions.someone_invited_you")

        %p= link_to t("devise.mailer.invitation_instructions.accept"), accept_invitation_url(@resource, :invitation_token => @token), style: 'color: #008CBA; font-size: 18px; line-height: 45px;'

        %p{style: 'line-height: 22px;'}= t("devise.mailer.invitation_instructions.ignore").html_safe
