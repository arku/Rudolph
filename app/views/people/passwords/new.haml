.row
  %h1= t('forgot_your_password')
.row.full-width.collapse
  .large-5.columns.left
    .box
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = devise_error_messages!

        .field
          = f.label :email
          = f.email_field :email, autofocus: true

        .actions.right
          = f.submit t('send_reset_password'), class: 'btn gray'

  .large-7.right.login-side
    = render "people/shared/links"