.row
  %h1= t('change_your_password')
.row.full-width.collapse
  .large-5.columns.left
    .box
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token

        .field
          = f.label :password, t('new_password')
          = f.password_field :password, autofocus: true, autocomplete: "off"

        .field
          = f.label :password_confirmation, t('confirm_new_password')
          = f.password_field :password_confirmation, autocomplete: "off"

        .actions.right
          = f.submit t('change_my_password'), class: 'btn gray'

  .large-7.right.login-side
    = render "people/shared/links"