.row
  %h1= t('sign_up')
  .box.large-5
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      .field
        = f.label :name
        = f.text_field :name

      .field
        = f.label :email
        = f.email_field :email

      .field
        = f.label :password
        - if @validatable
          %em= t('minimum_password_length', length: @minimum_password_length)
          %br
          = f.password_field :password, autocomplete: "off"

      .field
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "off"

      .actions
        = f.submit t('sign_up'), class: 'btn gray'
