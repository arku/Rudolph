.row.full-width
  .section-header
    %h1 My groups
    .action
      = link_to '+ New group', new_group_path

  - if @groups.any?
    .row.full-width
      - @groups.each do |group|
        .large-6.columns.left
          .box.group-about
            .info
              = link_to group.name, group_path(group)
              .item
                .bold When
                = group.date
              .item
                .bold Where
                = group.location
              .item
                .bold Drawing status
                - if group.status == 1
                  Names have been drawn!
                  = link_to 'Find out who you got!', who_group_path(group)
                - else
                  .red Pending
  - else
    You don't belong to any groups yet.
    = link_to 'Create one!', new_group_path