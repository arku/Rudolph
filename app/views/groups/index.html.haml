.row.full-width
  .section-header
    %h1= t('my_groups')
    .action
      = link_to t('new_group'), new_group_path

  - if @groups.any?
    .row.full-width
      - @groups.each do |group|
        .large-6.columns.left
          .box.group-about.index-group-about
            .info.index-info
              %p= link_to group.name, group_path(group)
              .item
                .bold= t('where')
                = cut_text(group.location, 30) 
              .item
                .bold= t('status')
                - if group.status == 1
                  = t('status_drawn')
                  %br
                  = link_to t('see_result'), who_group_path(group)
                - else
                  .red= t('status_pending')
            .side
              .calendar-small
                .month= Date::MONTHNAMES[group.date.month]
                .day= group.date.day
                .time= group.date.strftime("%H:00")

  - else
    = t('no_groups')
    = link_to t('create_group'), new_group_path