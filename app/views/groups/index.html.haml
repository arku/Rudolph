.row.full-width
  .section-header
    %h1 My groups
    .action
      = link_to '+ New group', new_group_path

  - if @groups.any?
    .row.full-width
      - @groups.each do |group|
        .large-6.columns.left
          .box.group-about.index-group-about
            .info.index-info
              %p= link_to group.name, group_path(group)
              .item
                .bold Where
                = cut_text(group.location, 30) 
              .item
                .bold Drawing status
                - if group.status == 1
                  Names have been drawn!
                  %br
                  = link_to 'See the result!', who_group_path(group)
                - else
                  .red Pending
            .side
              .calendar-small
                .month= Date::MONTHNAMES[group.date.month]
                .day= group.date.day
                .time= group.date.strftime("%H:00")

  - else
    You don't belong to any groups yet.
    = link_to 'Create one!', new_group_path