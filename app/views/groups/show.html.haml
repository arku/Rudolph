.row.full-width
  %h1= @group.name
  .row.full-width
    .large-8.columns.left
      .box.group-about
        .info
          .item
            .calendar
              .month= t("months")[@group.date.month]
              .day= @group.date.day
              .time= localize_time(@group.date)
            .bold= t('where')
            %p= @group.show_location
            .bold= t('price_range')
            %p= @group.show_price_range
            .bold= t('description')
            = @group.show_description
          - if @is_admin
            .item= link_to t('edit_info'), edit_group_path(@group)
        - if !@is_admin && @draw_pending
          .leave= link_to t('leave_group'), leave_group_path, method: :delete, class: 'red', data: {confirm: {title: t('are_you_sure'), ok: t('yes'), cancel: t('cancel'), modal_class: 'confirmation-modal'}}
    .large-4.columns.right
      .side
        #map
  %br
  - unless @draw_pending
    %h1= t('drawing')
    .group-draw
      = render 'groups/draw_done'
  %br
  .section-header
    %h1= t('members')
    - if @draw_pending
      .action
        .add= link_to t('add_members'), 'javascript:;'
  - if @draw_pending
    .box.sliding-box
      .close-sliding-box= link_to t('close'), 'javascript:;'
      .success.hidden
        .success-title= t('invitations_sent')
        .success-list
      .error.hidden
        .error-title= t('invitations_not_sent')
        .error-list
      = form_tag send_invitations_group_path, method: :post, remote: true do
        .invite-fields
          = render 'invitation_field'
        .large3.columns
          .add-more= link_to t('add_more'), 'javascript:;'
          = submit_tag t('send_invitations'), class: 'btn gray', onclick: "$(this).unbind('click')"

  .members
    - @group.people.each do |person|
      = render partial: 'groups/member', locals: {person: person, draw_pending: @draw_pending}

  - if @draw_pending
    %h1= t('drawing')
    .box.group-draw
      = render 'groups/draw_pending'
  %br
  .section-header
    %h1= t('my_wishlist')
    .action
      = link_to t('edit_wishlist'), edit_wishlist_group_path
  - if !@wishlist_description && @wishlist_items.empty?
    .box
      .light
        = t('empty_wishlist')
        = link_to t('create_wishlist'), edit_wishlist_group_path
  - else
    - if @wishlist_description
      %p= @wishlist_description
    - if @wishlist_items
      - @wishlist_items.each do |item|
        .large-4.columns.left
          .box.wishlist-item-small
            - if item.image
              .image= image_tag item.image
            .info
              .title
                - if is_url?(item.name_or_url)
                  = link_to "#{item.link_title || item.name_or_url}"[0..50], item.name_or_url
                - else
                  = item.name_or_url
      - if @wishlist_size > 3
        .action.right= link_to t('view_all'), edit_wishlist_group_path
      

