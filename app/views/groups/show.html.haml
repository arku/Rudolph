.row.full-width
  %h1= @group.name
  .box.group-about
    .info
      .item 
        .bold When
        = @group.date
      .item 
        .bold Where
        = @group.location
      .item 
        .bold Price range
        = @group.price_range
      .item 
        .bold Description
        = @group.description
    .map
      = image_tag 'fake_map.png'
  %br
  .section-header
    %h1 Members
    .action
      = link_to '+ Add members', 'javascript:;', onclick:"$('.invitation-box').slideToggle()"
  .box.invitation-box
    .success.hidden
      .success-title The following invitations were sent successfully:
      .success-list
    .error.hidden
      .error-title The following invitations could not be sent:
      .error-list
    = form_tag send_invitations_path, method: :post, remote: true do
      = hidden_field_tag :group_id, @group.id
      .invite-fields
        .invite-friend
          = label_tag 'friends[]', 'Email'
          = text_field_tag 'friends[]'
      .large3.columns
        .add-more= link_to '+ Add more', 'javascript:;'
        = submit_tag 'Send invitations'

  .members
    - @group.people.each do |person|
      = render partial: 'groups/member', locals: {person: person}