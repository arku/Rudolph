.row.full-width
  %h1= @group.name
  .row.full-width
    .large-8.columns.left
      .box.group-about
        .info
          .item
            .calendar
              .month= Date::MONTHNAMES[@group.date.month]
              .day= @group.date.day
              .time= @group.date.strftime("%H:00")
            .bold Where
            %p= @group.show_location
            .bold Price range
            %p= @group.show_price_range
            .bold Description
            = @group.show_description
          - if @is_admin
            .item= link_to 'Edit group info', edit_group_path(@group)
        - if !@is_admin && @draw_pending
          .leave= link_to 'Leave group', leave_group_path, method: :delete, class: 'red', data: {confirm: {title: 'Are you sure?', ok: 'Yes', modal_class: 'confirmation-modal'}}
    .large-4.columns.right
      .side
        #map
  %br
  - unless @draw_pending
    %h1 Drawing
    .group-draw
      = render 'groups/draw_done'
  %br
  .section-header
    %h1 Members
    - if @draw_pending
      .action
        .add= link_to '+ Add members', 'javascript:;'
  - if @draw_pending
    .box.sliding-box
      .close-sliding-box= link_to 'Close', 'javascript:;'
      .success.hidden
        .success-title The following invitations were sent successfully:
        .success-list
      .error.hidden
        .error-title The following invitations could not be sent:
        .error-list
      = form_tag send_invitations_group_path, method: :post, remote: true do
        .invite-fields
          = render 'invitation_field'
        .large3.columns
          .add-more= link_to '+ Add more', 'javascript:;'
          = submit_tag 'Send invitations', class: 'btn gray', onclick: "$(this).unbind('click')"

  .members
    - @group.people.each do |person|
      = render partial: 'groups/member', locals: {person: person, draw_pending: @draw_pending}

  - if @draw_pending
    %h1 Drawing
    .box.group-draw
      = render 'groups/draw_pending'
  %br
  .section-header
    %h1 My Wishlist
    .action
      = link_to 'Edit wishlist', edit_wishlist_group_path
  - if !@wishlist_description && @wishlist_items.empty?
    .box
      .light
        You don't have a wishlist yet!
        = link_to 'Create one!', edit_wishlist_group_path
  - else
    - if @wishlist_description
      %p= @wishlist_description
    - if @wishlist_items
      - @wishlist_items.each do |item|
        .large-4.columns.left
          .box.wishlist-item-small
            - if item.image
              .image= image_tag item.image
            .info
              .title
                - if is_url?(item.name_or_url)
                  = link_to "#{item.link_title || item.name_or_url}"[0..50], item.name_or_url
                - else
                  = item.name_or_url
      - if @wishlist_size > 3
        .action.right= link_to 'View all', edit_wishlist_group_path
      

