#who
  .row.full-width
    .section-header
      %h1= t('persons_wishlist', name: @person.first_name)
    - if @wishlist_description
      %p= @wishlist_description

    .row.full-width
      - if @wishlist_items.any?
        = render 'groups/wishlist_items'
      - else
        .full-width.columns.left
          .box
            .light= t('persons_empty_wishlist', name: @person.name)